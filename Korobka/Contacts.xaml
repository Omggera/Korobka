<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Korobka.Contacts">

    <ScrollView>
        <VerticalStackLayout
            Padding="10,0"
            Spacing="10">
            
            <Label 
                Text="Адрес и режим работы"
                FontSize="28"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Margin="10"/>

            <Frame 
                BorderColor="Gray" 
                HasShadow="False" 
                HeightRequest="90" 
                Margin="0,0,0,20">
                <StackLayout>
                    <Grid
                        RowDefinitions="Auto,Auto"
                        ColumnDefinitions="Auto">
                        <Label 
                            Text="г. Владимир, ул. Ново-Ямская, д. 75"
                            FontSize="16"
                            Margin="0,0,0,10"/>
                        <Label 
                        Grid.Row="1"   
                        Text="С понедельника по четверг с 10 до 19"
                        FontSize="16"/>
                    </Grid>
                </StackLayout>
            </Frame>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>